<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".Fragment.TakerHome">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="65dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:paddingLeft="28dp"
                android:paddingRight="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:id="@+id/aa"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFFF"
                                android:text="Karigor\nStart form 500tk"
                                android:gravity="center"
                                android:paddingLeft="10dp"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/maid_aaa"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="#009f2b2b" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/ab"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFFF"
                                android:text="Cleaner\nStart form 500tk"
                                android:gravity="center"
                                android:paddingLeft="10dp"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cleaner"/>


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="#00ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/ac"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFFF"
                                android:text="Vehicle services\nStart form 500tk"
                                android:gravity="center"
                                android:paddingLeft="10dp"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vehicle"/>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="#009f2b2b" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/ad"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="-1dp"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="Electrecian\nStart form 500tk"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/elctro"/>


                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="#00ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/ae"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFFF"
                                android:text="Sifting\nStart form 300tk"
                                android:gravity="center"
                                android:paddingLeft="10dp"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sifting"/>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="#009f2b2b" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="6"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/af"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/aaaa"
                            android:layout_marginTop="40dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFFF"
                                android:text="Mechanics\nStart form 500tk"
                                android:gravity="center"
                                android:paddingLeft="10dp"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mechanics"/>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</FrameLayout>